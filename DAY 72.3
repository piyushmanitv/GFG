        int tsum = accumulate(arr.begin(), arr.end(), 0);
        vector<vector<int>>dp(arr.size()+1,vector<int>(tsum+1,-1)); 
        if(tsum%2!= 0) return false; 
        return solve(arr,0,0,tsum/2,dp); 
    }
};


