class Solution {
  public:
    // Function which returns the  root of the flattened linked list.
    Node *flatten(Node *root) {
        // Your code here
        Node* d=new Node(-1);
        Node* nxt=d;
        priority_queue<pair<int, Node*>, vector<pair<int, Node*>>, 
        greater<pair<int, Node*>>>pq;
        
        Node* curr=root;
        while(curr){
            pq.push({curr->data, curr});
            curr=curr->next;
        }
        
        while(!pq.empty()){
            auto it=pq.top();
            pq.pop();
            int val=it.first;
            Node* node=it.second;
            
            nxt->bottom=node;
            nxt=node;
            if (node->bottom) {
                pq.push({node->bottom->data, node->bottom});
            }
        }
        
        return d->bottom;
    }
};
